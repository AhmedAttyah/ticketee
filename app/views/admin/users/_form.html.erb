<%= form_for [:admin,@user]  do |f| %>
	<% @user.errors.full_messages.each do |error| %>
		<h2><%= error %></h2>
	<%end %>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %> <br>
	</p>
	<p>
		<%= f.check_box :admin %>
		<%= f.label "Is an admin?" %> <br>
	</p>
	<%= f.submit %>
<% end %>